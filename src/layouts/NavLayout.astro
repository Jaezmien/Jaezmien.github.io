---
import Layout from './Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<nav class="w-full h-16 mb-4">
		<ul class="h-full flex flex-row place-items-center justify-center gap-4 mx-4 sm:mx-12">
			<li class="mr-auto" aria-label="Jaezmien Naejara">
				<a href="/" class="!text-meadow-text !not-italic text-xl">
					<b class="hidden sm:block" aria-hidden="true">Jaezmien Naejara</b>
					<b class="block sm:hidden" aria-hidden="true">Jaezmien</b>
				</a>
			</li>
			<li><a href="/about">About</a></li>
			<li><a href="/projects">Projects</a></li>
		</ul>
	</nav>
	<slot />
</Layout>
