---
import Layout from './Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<nav class="w-full h-16 mb-4">
		<ul class="h-full flex flex-row place-items-center justify-center gap-4 mx-4 sm:mx-12">
			<li class="mr-auto" aria-label="Jaezmien Naejara">
				<a
					href="/"
					rel="prefetch"
					class="!text-meadow-text dark:!text-meadow-bg !not-italic text-xl no-underline"
				>
					<b class="hidden sm:block" aria-hidden="true">Jaezmien Naejara</b>
					<b class="block sm:hidden" aria-hidden="true">Jaezmien</b>
				</a>
			</li>
			<li><a class="no-underline" href="/about" rel="prefetch">About</a></li>
			<li><a class="no-underline" href="/projects" rel="prefetch">Projects</a></li>
		</ul>
	</nav>
	<slot />
</Layout>
