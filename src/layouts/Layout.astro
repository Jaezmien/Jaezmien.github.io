---
import '@fontsource/exo-2/100-italic.css';
import '@fontsource/exo-2/100.css';
import '@fontsource/exo-2/300-italic.css';
import '@fontsource/exo-2/300.css';
import '@fontsource/exo-2/400-italic.css';
import '@fontsource/exo-2/400.css';
import '@fontsource/exo-2/700-italic.css';
import '@fontsource/exo-2/700.css';
import '@fontsource/exo-2/900-italic.css';
import '@fontsource/exo-2/900.css';
import '@fontsource/raleway/700.css';
import '@fontsource/raleway/900.css';
import '@fontsource/roboto/700.css';
import '@fontsource/roboto/900.css';

import '../styles/global.scss';

import BaseHead from '../components/BaseHead.astro';

export interface Props {
	title?: string;
}

const { title: _title } = Astro.props;
const title = (_title || '') + (_title?.trim() ? ' • ' : '') + 'Jaezmien Naejara';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description="🌼 A website of a cow 🐄" />
	</head>
	<body class="bg-meadow-bg text-meadow-text dark:bg-meadow-text dark:text-meadow-bg">
		<slot />
	</body>
</html>
